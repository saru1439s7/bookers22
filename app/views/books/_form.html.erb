
<%= form_with model:book,local:true do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control book_title' %>
  </div>
  <div>
    <%= f.label :opinion %></div>
    <div><%= f.text_area :body, class: 'form-control book_body' %>
  </div>
  <div>
    <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>