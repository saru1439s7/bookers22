<h4>Editing Book</h4>
<div class="edit-body">
  <%= form_with model: @book, local:true do |f| %>
    <h4>Title</h4>
     <%= f.text_field :title %>
    <h4>Opinion</h4>
     <%= f.text_area :body %>
     <p>
    <%= f.submit nil, class: 'btn btn-success'%>
    </p>
     <%= link_to "Show", book_path(@book) %>
     <span>|</span>
     <%= link_to "Back", books_path %>
  <% end %>
</div>

